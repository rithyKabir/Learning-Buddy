<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="6dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/clover"
        android:src="@drawable/clover"
        android:elevation="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ImageView>
    <LinearLayout
        android:id="@+id/textsplash"
        android:gravity="center"
        android:elevation="6dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="29sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:text="Hey Buddy!!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:textSize="16sp"
            android:textColor="#FFF"
            android:text="It's good to see you again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/texthome"
        android:paddingLeft="18dp"
        android:paddingTop="10dp"
        android:gravity="left"
        android:textAlignment="center"
        android:elevation="6dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="29sp"
            android:textColor="#FFF"
            android:paddingLeft="20dp"
            android:text="Learning Buddy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:textSize="16sp"
            android:textColor="#FFF"
            android:paddingLeft="20dp"
            android:text="Eat Sleep Learn Repeat"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:paddingTop="35dp"
        android:id="@+id/menus"
        android:elevation="6dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/profile"
                    android:layout_marginTop="230dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="4dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/profile"
                    android:layout_gravity="center_vertical"></Button>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:layout_marginLeft="83dp"
                    android:textAlignment="center"
                    android:textColor="#0F1843"
                    android:textSize="16sp"
                    android:textStyle="bold">

                </TextView>


            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <Button
                    android:id="@+id/course"
                    android:layout_marginTop="230dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="4dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/revision"
                    android:layout_gravity="center_vertical"></Button>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Courses"
                    android:layout_marginLeft="74dp"
                    android:textAlignment="center"
                    android:textColor="#0F1843"
                    android:textSize="16sp"
                    android:textStyle="bold">

                </TextView>


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:paddingTop="8dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/custom"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="4dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/custom"
                    android:layout_gravity="center_vertical"></Button>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Custom"
                    android:layout_marginLeft="79dp"
                    android:textAlignment="center"
                    android:textColor="#0F1843"
                    android:textSize="16sp"
                    android:textStyle="bold">

                </TextView>


            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <Button
                    android:id="@+id/quiz12"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="4dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/quiz"
                    android:layout_gravity="center_vertical"></Button>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quizes"
                    android:layout_marginLeft="74dp"
                    android:textAlignment="center"
                    android:textColor="#0F1843"
                    android:textSize="16sp"
                    android:textStyle="bold">

                </TextView>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/bgapp"
        android:src="@drawable/bgapp"
        android:scaleType="fitXY"
        android:layout_width="526dp"
        android:layout_height="wrap_content"
        >
    </ImageView>


</RelativeLayout>